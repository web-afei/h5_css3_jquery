	Z-INDEX: 10; POSITION: relative; WIDTH:1003px; height:507px; margin:0 auto ;display:block; background:url(bannerbj1.png);}
.slide-show .current-slide {
VISIBILITY: visible;
}
.slide-image {
	Z-INDEX: 11; POSITION: absolute; VISIBILITY: hidden; margin-top: 0px; margin-left: 500px;
}
